<?xml version="1.0" encoding="utf-8"?>
         <androidx.cardview.widget.CardView
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"

             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="horizontal"

             android:elevation="20dp"
             android:padding="0dp"

        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"




        >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >       <LinearLayout
                android:id="@+id/fixed9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"

                android:orientation="horizontal"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/fixed5"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"

                    android:orientation="vertical"
                    android:padding="0dp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="#272727"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="5dp"
                        android:textSize="16sp"
                        android:textStyle=""

                        android:fontFamily="sans-serif"
                        />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:src="@drawable/ic_baseline_expand_more_24"
                        android:id="@+id/expand"
                         android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:visibility="gone"
                      android:id="@+id/expand2"
                      android:text="0"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:src="@drawable/ic_baseline_delete_outline_24"
                        android:id="@+id/delete"
                        android:tint="#ED1B3B"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:visibility="gone"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fixed3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:gravity="right"
                    android:orientation="vertical"

                    android:padding="0dp">

                    <LinearLayout
                        android:id="@+id/fixed4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="0dp"
                        android:gravity="right"
                        android:orientation="horizontal"

                        android:padding="0dp">


                        <TextView
                            android:id="@+id/ruppes"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="0dp"
                            android:padding="5dp"

                            android:fontFamily="sans-serif"
                            android:textColor="#07BD7B"
                            android:textSize="22sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fixed46"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:gravity="right"
                        android:orientation="horizontal"

                        android:padding="0dp">


                        <TextView
                            android:id="@+id/payed2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="0dp"
                            android:gravity="right"
                            android:padding="5dp"

                            android:fontFamily="sans-serif"
                            android:textColor="#0076E9"
                            android:textSize="22sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fixed54"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="0dp"

                        android:visibility="visible">


                        <TextView
                            android:id="@+id/remain2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="0dp"
                            android:gravity="right"
                            android:padding="5dp"

                            android:fontFamily="sans-serif"
                            android:textColor="#F26545"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
            android:id="@+id/hidden1"
            android:visibility="gone"
>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/textViewdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"


            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
           android:tint="#0DE816"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/ic_baseline_format_list_bulleted_24" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/textViewUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"

            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_baseline_edit_24"
            tools:src="@drawable/ic_baseline_edit_24"
            android:tint="#198BFD"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/textViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"

            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:tint="#ED1B3B"
            android:src="@drawable/ic_baseline_delete_outline_24" />


    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>






